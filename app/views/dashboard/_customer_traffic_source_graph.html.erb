<%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js" %>
<%= javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js" %>


  <div class="col-lg-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="fa fa-bar-chart-o"></i> Customer Traffic Sources: Last 7 days 
        </h3>
      </div>
      <div class="panel-body">
        <div id="customer-traffic-source-graph"></div>
      </div>
    </div>
  </div>


<script>

Morris.Donut({
  element: 'customer-traffic-source-graph',
  data: [
    {label: "ALD + Repeat", value: 10},
    {label: "ALD + First-time", value: 12},
    {label: "Organic", value: 82}
  ],
  formatter: function (y) { return y + "%" ;},
  resize: true,
  colors: ['Sienna', 'Tomato', 'Gold']
});


</script>
